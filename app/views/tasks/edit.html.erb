<div class="container">
  <h1>New Task</h1>
  <%= form_for @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
    <%= f.label :completed %>
    <%= f.text_field :completed, class: "form-control" %>
    <%= f.submit%>
  <% end %>

<div class="links">
  <%= link_to task_path, method: :delete do %>
  DELETE
  <% end %> <br>
  <%= link_to "Go back",  tasks_path%>
</div>
</div>

